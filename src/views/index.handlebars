<div>
  <h1>{{title}}</h1>
</div>
<div class="container">
  <div class="row">
{{#each products}}
    <div class="col">
    <div class="card" style="width: 14rem;">
      <img src="https://ichef.bbci.co.uk/news/640/cpsprodpb/A058/production/_101784014_gettyimages-490824921.jpg" class="card-img-top" alt="numeral de ejemplo" />
      <div class="card-body">
        <h6 class="card-title">{{this.title}}</h6>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">Category: {{this.category}}</p>
        <p class="card-text">Stock: {{this.stock}}</p>
        <p class="card-text">Price: {{this.price}}</p>
      </div>
      <div class="card-body">
        <a href="#" class="card-link">Detalle</a>
        <a href="#" class="card-link">Agregar al carrito</a>
      </div>
    </div>
    </div>
{{/each}}
  </div>
</div>

<nav class="d-grid gap-2 col-6 mx-auto" aria-label="Page navigation example">
  <ul class="pagination">
    {{#if hasPrevPage}}
      <li class="page-item"><a
          class="page-link"
          href="{{prevLink}}"
        >Previous</a></li>
    {{/if}}
    {{#if hasNextPage}}
      <li class="page-item"><a
          class="page-link"
          href="{{nextLink}}"
        >Next</a></li>
    {{/if}}
  </ul>
</nav>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
